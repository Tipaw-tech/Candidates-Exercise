{
  "compilerOptions": {
    "target": "es2019",
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
},
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules", "typings/**/*.d.ts"],
  
  // "filesGlob": [
  //     "src/main/*.ts",
  //     "src/main/**/*.ts"
  // ],

}
